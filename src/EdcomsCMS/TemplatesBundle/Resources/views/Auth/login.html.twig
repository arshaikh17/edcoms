{% extends 'EdcomsCMSTemplatesBundle::base.html.twig' %}

{% block content %}
<div class="l-content">
    <main class="l-inner-content">
        <form action="{{ path('login_check') }}" method="post">
            <div class="m-userpanel m-userpanel--small u-align-center">
                <div class="m-userpanel__content">
                    <h1 class="m-userpanel__header">Please login here</h1>
                    <div class="m-form">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="m-form__block-field u-clearfix">
                            <label class="m-form__label m-form__label--big" for="username">Username</label>
                            <input class="m-form__field" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>

                        <div class="m-form__block__field u-clearfix">
                            <label class="m-form__label m-form__label--big" for="Password">Password</label>
                            <input class="m-form__field"  type="password" id="password" name="_password" />
                        </div>
                    </div>


                </div>
                <div class="m-userpanel__button u-align-right">
                    <button type="submit" name="login" class="m-btn m-btn--primary m-btn--rsd">Login</button>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            <input type="hidden" name="_target_path" value="/cms" />
        </form>
    </main>
</div>
{% endblock %}
